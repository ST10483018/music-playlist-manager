<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedReview">

    <TextView
        android:id="@+id/txtList"
        android:layout_width="201dp"
        android:layout_height="133dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="120dp"
        android:text="List of songs"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAverage"
        android:layout_width="204dp"
        android:layout_height="78dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="117dp"
        android:text="Average"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtList" />

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="111dp"
        android:layout_height="69dp"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="46dp"
        android:text="Display list"
        app:layout_constraintBottom_toTopOf="@+id/btnReturn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAverage"
        android:layout_width="118dp"
        android:layout_height="67dp"
        android:layout_marginStart="79dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="48dp"
        android:text="Average Rating"
        app:layout_constraintBottom_toTopOf="@+id/btnReturn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDisplay" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="173dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="69dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>